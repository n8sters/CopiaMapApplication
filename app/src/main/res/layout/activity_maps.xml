<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.ncpow.copiamapapplication.MapsActivity" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="@string/map_screen_label"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:background="@color/colorPrimary" />

    <Button
        android:id="@+id/start_navigation_button"
        android:onClick="startNavigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignBottom="@id/map"
        android:text="@string/start_navigation_label"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="24sp"
        android:background="@color/colorPrimary" />
</RelativeLayout>